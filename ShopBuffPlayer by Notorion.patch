+	private void checkNpcSchedule()
+	{
+		Calendar calendar = Calendar.getInstance();
+		int dayOfWeek = calendar.get(Calendar.DAY_OF_WEEK);
+		int hourOfDay = calendar.get(Calendar.HOUR_OF_DAY);
+		int minuteOfHour = calendar.get(Calendar.MINUTE);
+		LOGGER.info("Verifying Schedule: Day " + dayOfWeek + ", Hours " + hourOfDay + ":" + minuteOfHour);
+		long currentTime = System.currentTimeMillis();
+		if ((currentTime - lastReloadTime) > RELOAD_INTERVAL)
+		{
+			LOGGER.info("Recharging TXT scheduling file ...");
+			loadScheduleFromFile();
+			lastReloadTime = currentTime;
+		}
+		
+		for (DaySchedule daySchedule : SCHEDULE)
+		{
+			if (daySchedule.dayOfWeek == dayOfWeek)
+			{
+				// check if the NPC is enabled for the current day and if the current time and minute are within the permitted interval
+				boolean isActive = daySchedule.enabled && ((hourOfDay > daySchedule.startHour) || ((hourOfDay == daySchedule.startHour) && (minuteOfHour >= daySchedule.startMinute))) && ((hourOfDay < daySchedule.endHour) || ((hourOfDay == daySchedule.endHour) && (minuteOfHour < daySchedule.endMinute)));
