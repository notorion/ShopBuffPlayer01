+	{
+		switch (dayName)
+		{
+			case "SUNDAY":
+				return Calendar.SUNDAY;
+			case "MONDAY":
+				return Calendar.MONDAY;
+			case "TUESDAY":
+				return Calendar.TUESDAY;
+			case "WEDNESDAY":
+				return Calendar.WEDNESDAY;
+			case "THURSDAY":
+				return Calendar.THURSDAY;
+			case "FRIDAY":
+				return Calendar.FRIDAY;
+			case "SATURDAY":
+				return Calendar.SATURDAY;
+			default:
+				return -1;
+		}
+	}
